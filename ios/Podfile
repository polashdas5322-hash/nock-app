# Unix Line Breaks
platform :ios, '15.1'

# CocoaPods analytics off
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig and running flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      # Enforce the same deployment target for all pods
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.1'
      
      # Disable bitcode as it's deprecated and can cause linkage issues
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      
      # Exclude arm64 for simulator to prevent linking errors
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = "arm64"
    end
  end

  # 2. Automate the vtool patch for FFmpeg (The "Real World" Fix)
  ffmpeg_framework_path = "Pods/ffmpeg_kit_flutter_new/ios/Frameworks/ffmpegkit.framework"
  
  if Dir.exist?(ffmpeg_framework_path)
    # Define the path to the binary inside the framework
    binary_path = "#{ffmpeg_framework_path}/ffmpegkit"
    
    # Check if the file exists before trying to patch
    if File.exist?(binary_path)
      puts "ğŸ”§ Nock Build: Patching FFmpeg for iOS 26 Simulator..."
      # Use vtool to re-tag Platform 2 (iOS) to Platform 7 (Simulator)
      # This fixes "App needs to be updated" error on iOS 26+ Simulators
      system("xcrun vtool -arch arm64 -set-build-version 7 13.0 13.0 -replace \"#{binary_path}\" -output \"#{binary_path}\" 2>/dev/null")
    end
  end
end
