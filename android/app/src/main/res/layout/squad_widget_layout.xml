<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="horizontal"
    android:padding="0dp"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Left: Big Tile (Vibe 1) -->
        <FrameLayout
            android:id="@+id/vibe_1_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2">

            <!-- Hero Border (Von Restorff Effect) -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/widget_background" />

            <ImageView
                android:id="@+id/vibe_1_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_corners" />
            
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/vibe_gradient_overlay" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="8dp"
                android:orientation="vertical">
                
                <!-- ðŸ“ TRANSCRIPTION OVERLAY (Curiosity Gap) -->
                <!-- Only on Hero (Vibe 1) to avoid clutter -->
                <TextView
                    android:id="@+id/vibe_transcription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:background="@drawable/transcription_background"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:visibility="gone" />
                
                <TextView
                    android:id="@+id/vibe_1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />
                
                <TextView
                    android:id="@+id/vibe_1_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CCFFFFFF"
                    android:textSize="9sp" />
            </LinearLayout>

            <!-- Prominent Unread Dot (Von Restorff) -->
            <ImageView
                android:id="@+id/vibe_1_unread"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="top|right"
                android:layout_margin="8dp"
                android:src="@drawable/circle_accent"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Right: Vertical stacking (Small Tiles) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Vibe 2 (Small) -->
            <FrameLayout
                android:id="@+id/vibe_2_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/vibe_2_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_corners" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/vibe_gradient_overlay_compact" />

                <TextView
                    android:id="@+id/vibe_2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_margin="6dp"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:maxLines="1" />

                <ImageView
                    android:id="@+id/vibe_2_unread"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="top|right"
                    android:layout_margin="4dp"
                    android:src="@drawable/circle_accent"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Vibe 3 (Small) -->
            <FrameLayout
                android:id="@+id/vibe_3_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/vibe_3_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_corners" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/vibe_gradient_overlay_compact" />

                <TextView
                    android:id="@+id/vibe_3_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_margin="6dp"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:maxLines="1" />

                <ImageView
                    android:id="@+id/vibe_3_unread"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="top|right"
                    android:layout_margin="4dp"
                    android:src="@drawable/circle_accent"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- Zero State: Empty Squad / No Vibes -->
    <LinearLayout
        android:id="@+id/empty_state_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_mic_small"
            android:background="@drawable/circle_gradient" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="No vibes yet"
            android:textColor="#CCFFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Tap to start"
            android:textColor="#88FFFFFF"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>
